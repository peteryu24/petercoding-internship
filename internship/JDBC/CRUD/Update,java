package gmx.jdbc;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;


/**
 * UpdateNamecard 클래스는 NAMECARD 테이블의 데이터를 업데이트하는 로직을 담당합니다.
 */
public class Update {
    /**
     * 메인 메소드
     * @param args 커맨드라인 인자 (사용되지 않음)
     */
    public static void main(String[] args) {
        // 필요한 변수 선언
        Connection con = null;
        Statement stmt = null;

        // 업데이트를 위한 SQL 쿼리
        String sql = "UPDATE NAMECARD " +
                     "SET EMAIL ='gildonghong@gmail.org' " +
                     "WHERE NO = 1";

        try {
            // DBConnection 클래스를 이용하여 데이터베이스에 연결
            con = DBConnect2.getConnection();
            // SQL을 실행할 객체 생성
            stmt = con.createStatement();
            // SQL 쿼리 실행
            stmt.executeUpdate(sql);

        } catch (SQLException e) {
            // 에러 처리
            e.printStackTrace();
            System.out.println(sql);
        } finally {
            // 리소스 해제
            try {
                if (stmt != null) stmt.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
            try {
                if (con != null) con.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
    }
}
